# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/freelanceauto

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Email Configuration (Choose one method)
# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# OR SendGrid Configuration
# SENDGRID_API_KEY=your_sendgrid_api_key

# OR Mailgun Configuration
# MAILGUN_API_KEY=your_mailgun_api_key

# Email Settings
FROM_EMAIL=noreply@freelanceauto.com

# Application Settings
NODE_ENV=production
PORT=5000
BASE_URL=https://your-domain.com

# Session Configuration
SESSION_SECRET=your_very_long_random_session_secret_here

# Replit Auth (if using Replit)
REPLIT_DB_URL=your_replit_db_url

# Performance Settings
MAX_CACHE_SIZE=1000
CACHE_TTL=300000
MAX_METRICS=1000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log